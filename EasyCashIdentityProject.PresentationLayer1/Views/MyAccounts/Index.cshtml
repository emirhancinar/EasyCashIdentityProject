@model AppUserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MyProfile/Index.cshtml";
}

<div class="container mt-4">
    <!-- Üst Kısım -->
    <div class="d-flex justify-content-between align-items-center mt-1 mb-3">
        <!-- Sol Üst: Arama Kutusu -->
        <h4 class="text-primary">Easy Cash Müşteri Paneli</h4>

        <!-- Sağ Üst: Panel Başlığı -->
        <div class="input-group w-25 text-end">
            <input type="text" class="form-control rounded-start" placeholder="Aranacak kelime giriniz">
            <button class="btn btn-primary rounded-end">Ara</button>
        </div>
    </div>

    <!-- Müşteri Bilgileri Başlığı -->
    <h5 class="mt-4 border-bottom pb-2 text-center">Müşteri Bilgileri</h5>

    <!-- Kullanıcı Bilgileri Formu -->
    <form method="post" class="mt-3">
        <div class="row">
            <div class="col-md-6 mb-2">
                <label class="form-label">Ad <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="Name" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">Soyad <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="Surname" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">Telefon <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="PhoneNumber" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">E-Posta <span class="text-danger">*</span></label>
                <input type="email" class="form-control" asp-for="Email" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">Şehir <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="City" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">İlçe <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="District" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">Profil Resmi <span class="text-danger">*</span></label>
                <input type="text" class="form-control" asp-for="ImageUrl" required>
            </div>
            <div class="col-md-6 mb-2">
                <label class="form-label">Şifre</label>
                <input type="password" class="form-control" asp-for="Password">
            </div>
            <div class="col-md-6">
                <label class="form-label">Şifre Tekrar</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword">
            </div>
        </div>

        <!-- Butonlar -->
        <div class="mt-3 d-flex justify-content-between">
            <button type="reset" class="btn btn-danger w-50 me-2">İptal</button>
            <button type="submit" class="btn btn-success w-50">Bilgileri Güncelle</button>
        </div>
    </form>
</div>


